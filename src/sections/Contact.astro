---
import "@fontsource/audiowide";

import Typography from "@/components/Typography.astro";

import { CONTACTUS } from "@/consts/contact.ts";

const { title, description } = CONTACTUS;
---

<section class="flex flex-col items-center justify-center my-8">
  <Typography
    as="h1"
    variant="title"
    class:list={"text-center lg:mt-0 lg:leading-6"}
  >
    {title}
  </Typography>
  <Typography class:list={"text-center mt-4 p-5 lg:mt-10"}>
    {description}
  </Typography>
</section>
<style>
  h1 {
    font-family: "Audiowide";
  }
</style>

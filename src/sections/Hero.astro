---
import Section from "@/components/Section.astro";
import Typography from "@/components/Typography.astro";

import { COMPANY } from "@/consts/company.ts";

const { name, summary, secondSummary } = COMPANY;
---

<Section class:list={"flex flex-col items-center justify-center my-8"}>
  <Typography
    as="h1"
    variant="title"
    class:list={"text-center lg:leading-6"}
  >
    {name}
  </Typography>
  <Typography class:list={"text-center lg:mt-8"}>
    {summary}
  </Typography>
  <Typography class:list={"text-center lg:mt-4"}>
    {secondSummary}
  </Typography>
</Section>
